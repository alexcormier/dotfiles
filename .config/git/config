[color]
    ui = true

[push]
    default = simple
[pull]
    rebase = false

[credential]
    helper = cache --timeout=3600

[diff]
    tool = vimdiff
[difftool]
    prompt = false
[difftool "code"]
    cmd = code --wait --diff $LOCAL $REMOTE

[merge]
    tool = vimdiff
    conflictstyle = diff3
[mergetool]
    prompt=false

[alias]
    co = checkout
    st = status
    unstage = reset HEAD
